/***
--------------------
Canonical injections
--------------------

We implement the following injections.

    1) Injection from naturals to \ints.

    1) Injection from \pos \ints to naturals.
***/

with (N : NatSet , Z : IntSet) in {
  fix func cano_inj (elt : N.InSet) -> Z.InSet {
    return (
// Typing imposes that left objects live in ''NatSet'', whereas
// the right ones live in ''IntSet'', so ''zero -> zero'' is
// a shortcut for ''N.zero -> Z.zero'', and the same is true for
// the 2nd line.
      match elt with
        | zero   -> zero
        | succ p -> succ (cano_inj p)
    )
  }


  fix func cano_inj_to_nat (elt : Z.NonNegSet.InSet) -> N.InSet {
    return (
      match elt with
        | zero   -> zero
        | succ p -> succ (cano_inj p)
    )
  }
}
